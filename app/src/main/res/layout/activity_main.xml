<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2"
        android:textSize="25sp"
        android:editable="false"
        android:gravity="right"
        ></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btClear"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="CLEAR"
            android:background="@drawable/roundbutton"
            android:layout_margin="5sp"
            android:textSize="30sp"
            app:backgroundTint="@android:color/holo_orange_dark"
            >
        </Button>

        <Button
            android:id="@+id/btBack"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Back"
            android:layout_margin="5sp"
            android:background="@drawable/roundbutton"
            android:textSize="10sp"
            app:backgroundTint="@android:color/holo_orange_dark"
            ></Button>

        <Button
            android:id="@+id/btPer"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="%"
            android:layout_margin="5sp"
            android:background="@drawable/roundbutton"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:textSize="40sp"></Button>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/bt9"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:background="@drawable/roundbutton"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:layout_margin="5sp"
            android:textSize="30sp">
        </Button>

        <Button
            android:id="@+id/bt8"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:layout_margin="5sp"
            android:background="@drawable/roundbutton"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:textSize="40sp"></Button>

        <Button
            android:id="@+id/bt7"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:layout_margin="5sp"
            android:background="@drawable/roundbutton"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:textSize="40sp"></Button>

        <Button
            android:id="@+id/btDiv"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:layout_margin="5sp"
            android:background="@drawable/roundbutton"
            android:textSize="40sp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/bt6"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:background="@drawable/roundbutton"
            android:layout_margin="5sp"
            android:textSize="30sp">
        </Button>

        <Button
            android:id="@+id/bt5"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:background="@drawable/roundbutton"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:layout_margin="5sp"
            android:textSize="40sp"></Button>

        <Button
            android:id="@+id/bt4"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:layout_margin="5sp"
            android:background="@drawable/roundbutton"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:textSize="40sp"></Button>

        <Button
            android:id="@+id/btMul"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"

            android:layout_margin="5sp"
            android:background="@drawable/roundbutton"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:textSize="40sp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/bt3"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:layout_margin="5sp"
            android:background="@drawable/roundbutton"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:textSize="30sp">
        </Button>

        <Button
            android:id="@+id/bt2"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:layout_margin="5sp"
            android:background="@drawable/roundbutton"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:textSize="40sp"></Button>

        <Button
            android:id="@+id/bt1"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:layout_margin="5sp"
            android:background="@drawable/roundbutton"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:textSize="40sp"></Button>

        <Button
            android:id="@+id/btSub"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:layout_margin="5sp"
            android:background="@drawable/roundbutton"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:textSize="40sp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btDot"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:background="@drawable/roundbutton"
            android:layout_margin="5sp"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:textSize="30sp">
        </Button>

        <Button
            android:id="@+id/bt0"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:background="@drawable/roundbutton"
            android:layout_margin="5sp"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:textSize="40sp"></Button>

        <Button
            android:id="@+id/btEqual"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:layout_margin="5sp"
            android:background="@drawable/roundbutton"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:textSize="40sp"></Button>

        <Button
            android:id="@+id/btSum"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:layout_margin="5sp"
            android:background="@drawable/roundbutton"
            app:backgroundTint="@android:color/holo_orange_dark"
            android:textSize="40sp"></Button>

    </LinearLayout>


</LinearLayout>